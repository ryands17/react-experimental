{
  "extends": ["config:base"],
  "masterIssue": true,
  "automerge": true,
  "schedule": ["every weekend"],
  "ignoreDeps": ["react", "react-dom", "react-router", "react-router-dom"],
  "packageRules": [
    {
      "packagePatterns": ["^@types/"],
      "groupName": "ts-types"
    },
    {
      "packagePatterns": ["^@snowpack"],
      "groupName": "snowpack"
    },
    {
      "packagePatterns": ["^@testing-library", "jest", "cypress"],
      "groupName": "testing"
    },
    {
      "packagePatterns": ["^postcss", "autoprefixer"],
      "groupName": "postcss"
    },
    {
      "packagePatterns": [".*eslint"],
      "groupName": "eslint"
    }
  ]
}
