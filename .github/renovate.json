{
  "extends": ["config:base"],
  "masterIssue": true,
  "automerge": true,
  "schedule": ["every weekend"],
  "ignoreDeps": ["react", "react-dom", "react-router", "react-router-dom"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "automerge": true
    },
    {
      "packagePatterns": ["^@types/"],
      "groupName": "ts-types",
      "automerge": true
    },
    {
      "packagePatterns": ["^@snowpack"],
      "groupName": "snowpack",
      "automerge": true
    },
    {
      "packagePatterns": ["^@testing-library", "jest", "msw"],
      "groupName": "testing",
      "automerge": true
    },
    {
      "packagePatterns": ["^postcss", "autoprefixer"],
      "groupName": "postcss",
      "automerge": true
    },
    {
      "packagePatterns": [".*eslint"],
      "groupName": "eslint",
      "automerge": true
    }
  ]
}
