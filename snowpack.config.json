{
  "extends": "@snowpack/app-scripts-react",
  "scripts": {},
  "plugins": [
    [
      "@snowpack/plugin-build-script",
      { "cmd": "postcss", "input": [".css"], "output": [".css"] }
    ],
    [
      "@snowpack/plugin-run-script",
      {
        "cmd": "eslint 'src/**/*.{ts,tsx}'",
        "watch": "watch \"eslint 'src/**/*.{ts,tsx}'\" src"
      }
    ]
  ],
  "alias": {
    "~": "./src"
  }
}
